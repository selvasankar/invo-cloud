{
  "name": "invoice-backend",
  "version": "1.0.0",
  "description": "Backend API for Hosted Invoice App (Node.js + Express + TypeScript + Knex + PostgreSQL)",
  "main": "dist/server.js",
  "scripts": {
    "dev": "cross-env PORT=5000 nodemon --watch src --exec ts-node src/server.ts",
    "start": "node dist/server.js",
    "build": "tsc -p .",
    "migrate": "knex migrate:latest",
    "rollback": "knex migrate:rollback",
    "seed": "knex seed:run"
  },
  "keywords": [
    "invoices",
    "express",
    "knex",
    "typescript",
    "api",
    "postgres"
  ],
  "author": "Selvasankar",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "joi": "^17.12.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.555.0",
    "nodemailer": "^7.0.11",
    "pg": "^8.16.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.0.0",
    "@types/uuid": "^9.0.7",
    "axios": "^1.13.2",
    "bcryptjs": "^3.0.3",
    "cross-env": "^10.1.0",
    "knex": "^3.1.0",
    "nodemon": "^3.1.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}
